<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.stylefeng.guns.common.persistence.dao.IdCardDao">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.stylefeng.guns.modular.front.entity.IdCard">
        <id column="id" property="id" />
        <result column="uid" property="uid" />
        <result column="user_name" property="userName" />
        <result column="id_card_back" property="idCardBack" />
        <result column="id_card_front" property="idCardFront" />
        <result column="id_card_no" property="idCardNo" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <sql id="Base_Column_List">
        serial_no ,uid ,user_name ,id_card_back ,id_card_front ,id_card_no ,create_time ,update_time
    </sql>

    <select id="list" resultType="map">
        select * from user
        <if test="condition != null and condition != ''">
            where account like CONCAT('%',#{condition},'%')
        </if>
        order by update_time desc
    </select>
</mapper>